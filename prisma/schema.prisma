generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_PRODUCTION")
}

model User {
  id                String              @id @default(uuid())
  email             String              @unique
  name              String
  passwordHash      String
  role              Role                @default(VENDOR)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  CommissionSetting CommissionSetting?
  transactions      Transaction[]
  wallet            Wallet?
  WalletTransaction WalletTransaction[]
}

model Wallet {
  id        String   @id @default(uuid())
  userId    String   @unique
  balance   Decimal  @default(0)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Transaction {
  id           String     @id @default(uuid())
  trxnRef      String     @unique
  userId       String
  type         TrxnType
  amount       Decimal
  recipient    String
  networkId    Int?
  bundlePlanId String?
  status       TrxnStatus @default(PENDING)
  commission   Decimal    @default(0)
  apiResponse  Json?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  user         User       @relation(fields: [userId], references: [id])
}

model QrTransaction {
  id        String   @id @default(cuid())
  trxn      String   @unique
  type      String
  amount    Float
  customer  String
  network   Int?
  qrCodeUrl String
  status    String   @default("PENDING")
  response  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DataBundle {
  id        String   @id @default(uuid())
  networkId Int
  planId    String
  planName  String
  price     Decimal
  volume    String
  validity  String
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CommissionSetting {
  id        String   @id @default(cuid())
  userId    String   @unique
  rate      Float
  modelType String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model WalletTransaction {
  id           String   @id @default(cuid())
  userId       String
  type         String
  amount       Float
  balanceAfter Float
  metadata     String?
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  VENDOR
  USER
}

enum TrxnType {
  AIRTIME
  DATABUNDLE
  B2C
  C2B
  SMS
  FUND_TRANSFER
  VENDOR_SALE
}

enum TrxnStatus {
  PENDING
  SUCCESS
  FAILED
  UNKNOWN
}

enum CommissionType {
  DISCOUNT
  MARKUP
}
